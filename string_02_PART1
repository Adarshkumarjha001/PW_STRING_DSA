1)COUNT DIFFERENT NEIGHBOUR

#include <iostream>
#include<bits/stdc++.h>
using namespace std;
// different neighbour
int main() {
    string s;
    cin>>s;
    int n=s.length();
    int count=0;
   
    for(int i=0;i<n;i++){
         if(n==1){
        break;
    }
      if(n==2 && s[0]!=s[1]){
          count=1;
          break;
      }
        
            if(i==0){
                if(s[i]!=s[i+1]){
                    count++;
                }
            }
            else if(i==n-1){
                if(s[i]!=s[i-1])
                count++;
            }
             else if(s[i]!=s[i+1] && s[i]!=s[i-1]){
            count++;
        }
    }
    cout<<count;
    return 0;
}



// SORTING A STRING USIING IN-BUILT FUNCTION

#include <iostream>
#include<bits/stdc++.h>
using namespace std;
// different neighbour
int main() {
    string s;
    // cin>>s;
    // sort(s.begin(),s.end());
    // cout<<s;
    // sort->ascii value ke order me sort karega
    getline(cin,s);
    sort(s.begin(),s.end());
    cout<<s;
    return 0;
}


